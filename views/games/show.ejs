<%- include('../partials/header') %>

<section id="show-page">
  <div>Title:</div>
  <div><%= game.title %></div>
  <div>Completion:</div>
  <div><%= game.completion %></div>
  <!-- <div>Rating:</div>
  <div></div> -->
  <!-- <div>Cast:</div> -->
  <div>Playing:</div>
  <div><%= game.completion ? 'Yes' : 'Nope' %></div>
</section>
<!-- Reviews -->
<br /><br />
<h2>Reviews</h2>
<form
  id="add-review-form"
  method="POST"
  action="/games/<%= game._id %>/reviews"
>
  <% if (game.achievements.length) { %>
  <table>
    <thead>
      <tr>
        <th>Date</th>
        <th>Review</th>
        <th>Rating</th>
        <th>Delete</th>
      </tr>
    </thead>
    <tbody>
      <% game.achievements.forEach(function(r) { %>
      <tr>
        <td><%= r.createdAt.toLocaleDateString() %></td>
        <td><%= r.content %></td>
        <td><%= r.rating %></td>
        <td>
          <form
            id="delete-review-form"
            method="POST"
            action="/games/<%= movie._id %>/reviews/<%=review.id%>"
          >
            <button type="submit">Delete</button>
          </form>
        </td>
      </tr>
      <% }); %>
    </tbody>
  </table>
  <% } else { %>
  <h5>No Reviews Yet</h5>
  <% } %> <%- include('../partials/footer') %>
</form>
